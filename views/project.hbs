    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
</head>

<body class="bg-dark bg-opacity-10">
    <nav class="navbar navbar-expand-lg bg-light sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="/assets/img/brandred.png" alt="" width="30px">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/project">Add Project</a>
                    </li>
                </ul>
                <a href="/form">
                    <button class="btn bg-dark text-light px-3" type="submit">Contact Me</button></a>
            </div>
        </div>
    </nav>
    <h1 class="text-center mt-5">Dumbways Web App</h1>
    {{#if isLogin}}
    <div class="container-fluid d-flex flex-row-reverse mt-5">
        <button class="btn bg-dark text-light px-3"> <a class="text-light text-decoration-none" href="/add-project">Add
                Project</a></button>
    </div>
    {{/if}}
    <div class="container-fluid bg-dark bg-opacity-10 mt-5">
        <h1 class="text-center p-5">My Project</h1>
        <div class="row row-cols-1 row-cols-md-3 g-4 p-5">
            <div class="col">
                <div class="card">
                    <img src="assets/img/image-1.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Dumbways Mobile App-2021 sample</h5>
                        <p class="m-0">duration:</p>
                        <p>9 Agustus 2022 - 25 Agustus 2022 (16 day)</p>
                        <p class="card-text ms-1 mt-3">Data Dummy</p>
                        <h5 class="my-3">Technologie</h5>
                        <div class="h2 mb-3">
                            <span class="ms-1"><i class="fa-brands fa-square-js"></i></span>
                            <span class="ms-1"><i class="fa-brands fa-react"></i></i></span>
                            <span class="ms-1"><i class="fa-brands fa-node-js"></i></span>
                            <span class="ms-1"><i class="fa-brands fa-docker"></i></span>
                        </div>
                        <div class="d-flex ">
                            <button class="btn p-2 w-100 me-2 bg-dark text-light" type="button">Edit</button>
                            <button class="btn p-2 w-100 bg-dark text-light" type="button">Delet</button>
                        </div>
                    </div>
                </div>
            </div>

            {{#each addProject}} <div class="col">
                <div class="card">
                    <img src="assets/img/image-1.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/desk-project/{{@index}}" class="text-dark text-decoration-none">{{this.name}}</a>
                        </h5>
                        <p class="m-0">durasi:</p>
                        <p>{{this.startCalender}} - {{this.endCalender}} ({{this.duration}} day)</p>
                        <p class="card-text ms-1 mt-3">{{this.message}}</h5>
                        <h5 class="my-3">Technologie</h5>
                        <div class="h2 mb-3">
                            <span class="ms-1"><i class="fa-brands {{this.check1}}"></i></span>
                            <span class="ms-1"><i class="fa-brands {{this.check2}}"></i></i></span>
                            <span class="ms-1"><i class="fa-brands {{this.check3}}"></i></span>
                            <span class="ms-1"><i class="fa-brands {{this.check4}}"></i></span>
                        </div>
                        <div class="d-flex ">
                            <button class="btn p-2 w-100 me-2 bg-dark text-light" type="button">
                                <a href="/edit-project/{{@index}}" class="text-decoration-none text-light">edit</a>
                            </button>
                            <button type="button" class="btn p-2 w-100 bg-dark text-light" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">
                                <a href="/delete-project/{{@index}}" class="text-decoration-none text-light">delete</a>
                            </button>

                            {{!-- <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            sure to delete?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn p-2 bg-dark text-light"
                                                data-bs-dismiss="modal">Close</button>
                                            <button type="button" class="btn p-2 bg-dark text-light">
                                                <a href="/delete-project/{{@index}}"
                                                    class="text-decoration-none text-light">Delete</a></button>
                                        </div>
                                    </div>
                                </div>
                            </div> --}}
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
</body>

</html>